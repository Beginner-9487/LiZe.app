<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/Command_Edit"
        android:hint="@string/Temp_Command_Hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/C3_Send_Button" />

    <Button
        android:id="@+id/C3_Send_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Temp_UI_C3"
        app:layout_constraintBottom_toTopOf="@+id/Data_Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Command_Edit" />

    <TextView
        android:id="@+id/Data_Text"
        android:hint="@string/Temp_Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/FileName_Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/C3_Send_Button" />

<!--    <Button-->
<!--        android:id="@+id/C6_Receive_Button"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="@string/Temp_UI_C6"-->
<!--        app:layout_constraintBottom_toTopOf="@+id/Save_Excel_Button"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/C3_Send_Button" />-->

    <EditText
        android:id="@+id/FileName_Edit"
        android:hint="@string/Temp_FileName_Hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demo.xls"
        app:layout_constraintBottom_toTopOf="@+id/Save_Excel_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Data_Text" />

    <Button
        android:id="@+id/Save_Excel_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Temp_UI_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FileName_Edit" />

</androidx.constraintlayout.widget.ConstraintLayout>